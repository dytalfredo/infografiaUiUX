---
interface Props {
    number: string;
    expositor: string;
    title: string;
    subtitle: string;
    color?: string;
}

const {
    number,
    expositor,
    title,
    subtitle,
    color = "brutal-yellow",
} = Astro.props;

const colorMap: Record<string, string> = {
    "brutal-yellow": "bg-brutal-yellow text-dark border-brutal-yellow",
    "brutal-red": "bg-brutal-red text-white border-brutal-red",
    "brutal-blue": "bg-brutal-blue text-white border-brutal-blue",
    "brutal-green": "bg-brutal-green text-dark border-brutal-green",
    "brutal-pink": "bg-brutal-pink text-dark border-brutal-pink",
    "brutal-purple": "bg-brutal-purple text-white border-brutal-purple",
};

const badgeClass = colorMap[color] || colorMap["brutal-yellow"];
---

<div class="mb-12 animate-on-scroll">
    <div class="flex items-start gap-4 md:gap-6 mb-6">
        <div
            class={`font-mono font-bold text-6xl md:text-8xl leading-none ${badgeClass.includes("text-white") ? "text-" + color.replace("brutal-", "brutal-") : ""}`}
            style={`color: var(--color-${color});`}
        >
            {number}
        </div>
        <div>
            <span
                class={`inline-block font-mono text-xs font-bold px-3 py-1 mb-3 border-3 border-dark ${badgeClass}`}
            >
                {expositor}
            </span>
            <h2
                class="font-display font-bold text-3xl md:text-5xl lg:text-6xl leading-tight tracking-tight"
            >
                {title}
            </h2>
            <p
                class="font-body text-lg md:text-xl text-gray-600 mt-2 max-w-2xl"
            >
                {subtitle}
            </p>
        </div>
    </div>
    <div class="w-full h-1 bg-dark"></div>
</div>
