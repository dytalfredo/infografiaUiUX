---
interface Props {
    title: string;
    color?: string;
    icon?: string;
}

const { title, color = "brutal-yellow", icon = "â†’" } = Astro.props;
---

<div
    class={`border-brutal bg-white p-6 md:p-8 shadow-brutal hover:shadow-brutal-lg transition-all hover:-translate-x-0.5 hover:-translate-y-0.5 animate-on-scroll`}
>
    <div class="flex items-start gap-3 mb-4">
        <span
